<Window x:Name="MainMenu1" x:Class="FitnessClub.MainMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FitnessClub"
        mc:Ignorable="d"
        Title="Main Menu" Height="400" Width="500">
    <Grid Background="#FF9B0E2A">
        <Rectangle HorizontalAlignment="Left" Height="200" Stroke="Black" VerticalAlignment="Top" Width="492">
            <Rectangle.Fill>
                <ImageBrush ImageSource="Background Pic.jpg"/>
            </Rectangle.Fill>
        </Rectangle>
        <Rectangle x:Name="recWhiteSpace" HorizontalAlignment="Left" Height="40" Margin="0,0,-8,0" VerticalAlignment="Top" Width="492" Fill="White"/>
        <Rectangle x:Name="recLogoImg" HorizontalAlignment="Left" Height="40" VerticalAlignment="Top" Width="80">
            <Rectangle.Fill>
                <ImageBrush ImageSource="Logo.png"/>
            </Rectangle.Fill>
        </Rectangle>
        <Rectangle x:Name="recHoosierFitnessClub" HorizontalAlignment="Left" Height="40" Margin="80,0,0,0" VerticalAlignment="Top" Width="200">
            <Rectangle.Fill>
                <ImageBrush ImageSource="HooiserFitnessClub.png"/>
            </Rectangle.Fill>
        </Rectangle>
        <Button x:Name="btnMemberInformation" Content="Member Information" HorizontalAlignment="Left" Margin="349,222,0,0" VerticalAlignment="Top" Width="120" Height="120" Background="#FFEECD86" Foreground="#FF3D3242" Click="btnMemberInformation_Click" TabIndex="3"/>
        <Button x:Name="btnPricingManagement" Content="Pricing Management" HorizontalAlignment="Left" Margin="180,222,0,0" VerticalAlignment="Top" Width="120" Height="120" Background="#FFEECD86" Foreground="#FF3D3242" Click="btnPricingManagement_Click" TabIndex="2"/>
        <Button x:Name="btnMembershipSales" Content="Membership Sales" HorizontalAlignment="Left" Margin="20,222,0,0" VerticalAlignment="Top" Width="120" Height="120" Foreground="#FF3D3242" Background="#FFEECD86" Click="btnMembershipSales_Click" TabIndex="1"/>
        <Button x:Name="btnClose" Content="X" HorizontalAlignment="Left" Margin="470,0,0,0" VerticalAlignment="Top" Width="22" Background="#FFEECD86" Click="btnClose_Click"/>
    </Grid>
</Window>
